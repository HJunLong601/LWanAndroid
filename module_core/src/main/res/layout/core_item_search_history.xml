<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/item_history_icon_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/core_icon_history_gray"
            android:padding="@dimen/padding_small_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/margin_tiny_size" />

        <TextView
            android:id="@+id/item_history_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/common_text_content_size"
            android:textColor="@color/common_black"
            android:gravity="center|start"
            android:paddingEnd="@dimen/padding_small_size"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="222222222222222222222222222222222222222222222222222222222222222222222222222222"
            app:layout_constraintStart_toEndOf="@+id/item_history_icon_iv"
            app:layout_constraintEnd_toStartOf="@+id/item_history_delete_iv" />

        <ImageView
            android:id="@+id/item_history_delete_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/core_icon_delete_circle_gray"
            android:padding="@dimen/padding_small_size"
            android:layout_marginEnd="@dimen/margin_tiny_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>